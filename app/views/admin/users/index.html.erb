<%# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Admin â€” Users Index
  # location: views/admin/users/index.html.erb
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
%>

<header class="page-header">
  <div class="g">
    <div class="g8-xs">
      <h1 class="page-header__title">Users</h1>
    </div>
  </div>
</header>
<section class="page-section js-user-index">
  <div class="g">
    <div class="g12-xs page-section__create">
      <div class="page-section__form">
        <label class="page-section__label" for="search">Search Users</label>
        <input class="page-section__input js-search-users-input" type="text" name="search" value="<%= params[:search] %>" placeholder="Email">
        <button class="page-section__submit js-search-users-button">Search</button>
        <% if params[:admin] && params[:admin] != "false" %>
          <button class="page-button page-button--yellow js-show-users">All Users</button>
        <% else %>
          <button class="page-button page-button--yellow js-show-only-admin">Only Admin</button>
        <% end %>
      </div>
    </div>
    <ul class="g12-xs page-section__list">
      <% @users.each do |user| %>
        <li class="card">
          <h2 class="card__title">
            <a class="card__link" href="/admin/users/<%= user.id %>/edit"><%= user.email %></a>
          </h2>
        </li>
      <% end %>
    </ul>
    <div class="g12-xs page-pagination">
      <%= will_paginate @users %>
    </div>
  </div>
</section>