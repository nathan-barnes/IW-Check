<%# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Admin â€” Designs Index
  # location: views/admin/designs/index.html.erb
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
%>

<header class="page-header">
	<div class="g">
		<div class="g8-xs">
			<h1 class="page-header__title">Designs</h1>
		</div>
		<div class="g4-xs page-header__actions">
			 <a href="/designs" class="page-button page-button--yellow" target="_blank">Preview Page</a>
		</div>
    <div class="g12-xs">
      <%= link_to "Demos", "/admin/designs/demos", class: "page-header__link" %>
      <%= link_to "Designs", "/admin/designs/designs", class: "page-header__link" %>
      <%= link_to "Purchases", "/admin/designs/purchases", class: "page-header__link" %>
    </div>
	</div>
</header>
<section class="page-section js-thing-index">
	<div class="g">
    <div class="g4-xs page-section__list">
      <div class="g">
        <h3 class="g12-xs page-section__title">Designs</h3>
        <ul class="g12-xs page-section__list">
          <% @designs.take(10).each do |design| %>
            <li class="card">
               <h2 class="card__title">
				          <a class="card__link" href="/admin/designs/<%= design.token %>/edit"><%= design.title %></a>
				        </h2>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="g4-xs page-section__list">
      <div class="g">
        <h3 class="g12-xs page-section__title">Purchases</h3>
        <ul class="g12-xs page-section__list">
          <% @purchases.take(10).each do |purchase| %>
            <li class="card">
               <h2 class="card__title">
				          <a class="card__link" href="/admin/designs/<%= purchase.token %>/edit"><%= purchase.title %></a>
				        </h2>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="g4-xs page-section__list">
      <div class="g">
        <h3 class="g12-xs page-section__title">Demos</h3>
        <ul class="g12-xs page-section__list">
          <% @demos.take(10).each do |demo| %>
            <li class="card">
               <h2 class="card__title">
				          <a class="card__link" href="/admin/designs/<%= demo.token %>/edit"><%= demo.title %></a>
				        </h2>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>