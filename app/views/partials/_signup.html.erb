<h2 class="modal__title">Save Your Design</h2>
<p class="js-signup-error"></p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "modal__form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="modal__field">
    <%= f.label :email, class: "modal__label" %>
    <%= f.email_field :email, autofocus: true, class: "modal__input", placeholder: "you@example.com" %>
  </div>

  <div class="modal__field">
    <%= f.label :password, class: "modal__label" %>
    <em>(6 characters minimum)</em>
    <%= f.password_field :password, autocomplete: "off", class: "modal__input" %>
  </div>

  <div class="modal__field">
    <%= f.label :password_confirmation, class: "modal__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "modal__input" %>
  </div>

  <div class="modal__actions">
    <%= f.submit "Submit", id: "signup-submit", class: "modal__submit" %>
  </div>
<% end %>
<div class="modal__options">
  <a href="#login-modal" class="modal__link" title="Login" data-modal-open>Login</a>
  <a href="#forgot-password-modal" class="modal__link" title="Forgot your Password?" data-modal-open>Forgot your password?</a>
</div>
