<header class="page-header">
	<div class="g">
		<div class="g8-xs">
			<h1 class="page-header__title">Edit Project</h1>
		</div>
		<div class="g4-xs page-header__actions">
			 <a href="/gallery/<%= @project.slug %>" class="page-button page-button--yellow" target="_blank">Preview Page</a>
		</div>
	</div>
</header>
<section class="page-section js-thing-edit" data-slug="<%= @project.slug %>" data-id="<%= @project.id %>">
  <%= render partial: "admin/partials/thing_edit", locals: { 
	  thing: @project,
	  path: admin_project_url,
	  restful_method: :put,
	  categories: @categories,
	  materials: @materials,
	  thing_type: "Project"
	} %>
</section>