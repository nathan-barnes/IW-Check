<%# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Admin â€” Designs Edit
  # location: views/admin/designs/edit.html.erb
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
%>

<header class="page-header">
	<div class="g">
		<div class="g8-xs">
			<h1 class="page-header__title"><%= @param.capitalize.pluralize %></h1>
		</div>
	</div>
</header>
<section class="page-section js-thing-index">
	<div class="g designs">
		<% if @param == "demo" %>
			<ul class="g12-xs page-section__list js-thing-list">
				<% @designs.each do |design| %>
		      <li class="card <%= design.is_visible ? "is-published" : "is-draft" %>">
		        <div class="card__dragzone">
		          <span class="card__dragzone-circle"></span>
		          <span class="card__dragzone-circle"></span>
		          <span class="card__dragzone-circle"></span>
		          <span class="card__dragzone-circle"></span>
		          <span class="card__dragzone-circle"></span>
		          <span class="card__dragzone-circle"></span>
		        </div>
		        <h2 class="card__title">
		          <a class="card__link" href="/admin/designs/<%= design.token %>/edit"><%= design.title %></a>
		        </h2>
		        <div class="card__actions js-action-group" value="<%= design.token %>">
		          <button class="card__button--publish js-toggle-visibility">
		            <span><%= design.is_visible ? "Unpublish" : "Publish" %></span>
		          </button>
		          <% if current_user.is_super_admin %>
		            <button class="card__button--delete js-delete-thing">
		              <span>Delete</span>
		            </button>
		          <% end %>
		        </div>
		      </li>
		    <% end %>
		  </ul>
	  <% else %>
	    <ul class="g12-xs page-section__list">
	      <% @designs.each do |design| %>
	        <li class="card">
	          <h2 class="card__title">
	            <a class="card__link" href="/admin/designs/<%= design.token %>/edit"><%= design.title %></a>
	          </h2>
	        </li>
	      <% end %>
	    </ul>
    <% end %>
    <div class="g12-xs page-pagination">
      <%= will_paginate @designs %>
    </div>
  </div>
</section>